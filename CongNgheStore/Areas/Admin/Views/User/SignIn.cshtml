@model CongNgheStore.Models.ViewModel.SignInVM

@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_SignUp_Layout.cshtml";
}

<div class="container">
    <h2 class="col d-flex justify-content-center">Đăng nhập</h2>

    <hr />
    <div class="row">
        <div class="col-md-12">
            <form method="post" onsubmit="return false">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label">Số điện thoại: </label>
                    <input  oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1');" asp-for="PhoneNumber" class="form-control"/>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="control-label">Mật khẩu: </label>
                    <input type="password" asp-for="Password" class="form-control"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <input asp-for="RoleName" hidden />

                <div class="form-group col d-flex justify-content-center">
                    <button type="submit" class="btn btn-success">Đăng nhập</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    var subMitElement = document.querySelector('button[type="submit"]');
    
    subMitElement.onclick = function() {
        var phoneNumberElement = document.querySelector('input[name="PhoneNumber"]');
        var passwordElement = document.querySelector('input[name="Password"]');

        if (phoneNumberElement.value === '')
            document.querySelector('input[name="PhoneNumber"] ~ span').innerHTML = 'Số điện thoại là bắt buộc!';
        phoneNumberElement.onfocus = function() {
            document.querySelector('input[name="PhoneNumber"] ~ span').innerHTML = '';
        };

        if (passwordElement.value === '')
            document.querySelector('input[name="Password"] ~ span').innerHTML = 'Mật khẩu là bắt buộc!';
        passwordElement.onfocus = function() {
            document.querySelector('input[name="Password"] ~ span').innerHTML = '';
        };
    };

</script>